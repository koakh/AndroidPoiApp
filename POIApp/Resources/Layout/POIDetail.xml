<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/scrollView1"
  android:minWidth="25px"
  android:minHeight="25px"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <LinearLayout
    android:id="@+id/linearLayout1"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp">
    <TextView
      android:id="@+id/textView10"
      android:text="Name"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
    />
    <EditText
      android:id="@+id/nameEditText"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:inputType="textCapWords"
    />
    <TextView
      android:id="@+id/textView11"
      android:text="Description"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
    />
    <EditText
      android:id="@+id/descrEditText"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:inputType="textMultiLine|textCapSentences"
    />
    <TextView
      android:id="@+id/textView12"
      android:text="Address"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
    />
    <EditText
      android:id="@+id/addrEditText"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:inputType="textMultiLine"
    />
    <TableLayout
      android:id="@+id/tableLayout1"
      android:minWidth="25px"
      android:minHeight="25px"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:stretchColumns="*">
      <TableRow
        android:id="@+id/tableRow2">
        <TextView
          android:id="@+id/textView21"
          android:text="Latitude"
          android:layout_column="0"
        />
        <TextView
          android:id="@+id/textView22"
          android:text="Longitude"
          android:layout_column="1"
        />
      </TableRow>
      <TableRow
        android:id="@+id/tableRow3">
        <EditText
          android:id="@+id/latEditText"
          android:layout_column="0"
          android:inputType="numberDecimal|numberSigned"
        />
        <EditText
          android:id="@+id/longEditText"
          android:layout_column="1"
          android:inputType="numberDecimal|numberSigned"
        />
      </TableRow>
    </TableLayout>
    <ImageView
      android:id="@+id/poiImageView"
      android:src="@android:drawable/ic_menu_gallery"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:layout_gravity="center_horizontal"
      android:scaleType="fitCenter"
    />
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:minWidth="25px"
      android:minHeight="25px"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp">
      <ImageButton
        android:id="@+id/locationImageButton"
        android:src="@drawable/ic_locate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      />
      <ImageButton
        android:id="@+id/mapImageButton"
        android:src="@drawable/ic_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      />
      <ImageButton
        android:id="@+id/photoImageButton"
        android:src="@drawable/ic_new_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      />
    </LinearLayout>
  </LinearLayout>
</ScrollView>